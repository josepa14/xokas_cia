{% extends 'base.html.twig' %}

{% block title %}Registro
{% endblock %}

{% block body %}
	
		{{ form_start(registrationForm) }}		
	<div class="container py-5 h-100">
		<div class="row d-flex justify-content-center align-items-center h-100">
			<div class="col col-xl-10">
				<div class="card" style="border-radius: 1rem;">
					<div class="row g-0">
						<div class="col-md-6 col-lg-5 d-none d-md-block">
							<img src="/assets/img/juegos/login.jpg" alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;"/>
						</div>
						<div class="col-md-6 col-lg-7 d-flex align-items-center">
							<div class="card-body p-4 p-lg-5 text-black bg-white">

								<form method="post">

									<div class="d-flex align-items-center mb-3 pb-1">
										<i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
										<span class="h1 fw-bold mb-0"><img src="/assets/img/diseno/logo.png"/></span>
									</div>

									<h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Registro en el sitio</h5>

									<div class="form-outline mb-4">
										{{ form_row(registrationForm.username) }}
									</div>

									<div class="form-outline mb-4">
										{{ form_row(registrationForm.email) }}
									</div>
									<div class="form-outline mb-4">
										{{ form_row(registrationForm.plainPassword, {label: 'Password'}) }}
									</div>

									{{ form_row(registrationForm.agreeTerms) }}<button type="submit" class="btn btn-warning p-2">
										Registrar</button>
									{{ form_end(registrationForm) }}
								</form>

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
